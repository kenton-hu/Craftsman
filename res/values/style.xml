<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
 <style name="Theme.Translucent" parent="android:style/Theme.Translucent"> 
        <item name="android:windowNoTitle">true</item>  
        <item name="android:colorForeground">#fff</item>  
      
</style>
<style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <!-- 去掉Activity titlebar 和动画有黑边  欢欢新增   <item name="android:windowIsTranslucent">true</item> -->
    <style name="notitle" parent="android:style/Theme.Black.NoTitleBar"></style>

    <!-- popupwindow_demo 中动画文件   欢欢新增 -->
    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    
	<!-- 从上面进,下面出 -->
    <style name="Animation_DWAWER">
        <item name="android:windowEnterAnimation">@anim/pan_top</item>
        <item name="android:windowExitAnimation">@anim/pan_bottom</item>
    </style>
    
    <!-- 从下面进,上面出 -->
    <style name="Animation_REVER_DWAWER">
        <item name="android:windowEnterAnimation">@anim/pan_botom_come_in</item>
        <item name="android:windowExitAnimation">@anim/pan_bottom</item>
    </style>

    <!-- 聊天中长按菜单尺寸 -->
    <style name="messagelongclick">
        <item name="android:layout_width">@dimen/p50</item>
        <item name="android:layout_height">@dimen/p40</item>
    </style>

    <!-- 顶部标题栏标题文本样式 -->
    <style name="topbarTittleTheme">
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- 底部控件 -->
    <style name="bottombar_radioButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/fourteen</item>
        <item name="android:textColor">@drawable/main_tab_font_style</item>
        <item name="android:background">@null</item>
    </style>

    <!-- 设置中的高度 -->
    <style name="item_style">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- 设置线条 -->
    <style name="item_line">
        <item name="android:layout_height">0.3dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/dividing_line_color</item>
    </style>

