<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ebebeb"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/topRelative"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#39ace3" >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="10dip"
            android:layout_height="15dip"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="@drawable/back"
            android:gravity="center_vertical|center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/mCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="23dp"
            android:text="@string/back"
            android:textColor="@color/text_click"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center|center_horizontal"
            android:text="顾客评价"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/choice"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@id/topRelative"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/lyt_evaluate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|center_horizontal" >

            <TextView
                android:id="@+id/marks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="-10dp"
                android:gravity="center|center_horizontal"
                android:text="4.5"
                android:textSize="30sp"
                android:textColor="#fd0002" />

            <TextView
                android:id="@+id/zonghetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/marks"
                android:layout_centerInParent="true"
                android:gravity="center|center_horizontal"
                android:text="综合评分"
                android:textColor="#5d5d5d" />

            <TextView
                android:id="@+id/evaluatetext"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/zonghetext"
                android:layout_centerInParent="true"
                android:gravity="center|center_horizontal"
                android:text="顾客好评率85%"
                android:textColor="#888a89" />
        </RelativeLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#ebebeb" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="专业评分:"
                    android:textColor="@color/subtextcolor"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/zhuanyeimg1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/evaluate_gre" />

                <ImageView
                    android:id="@+id/zhuanyeimg2"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/evaluate_gre" />

                <ImageView
                    android:id="@+id/zhuanyeimg3"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/evaluate_gre" />

                <ImageView
                    android:id="@+id/zhuanyeimg4"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/evaluate_gre" />

                <ImageView
                    android:id="@+id/zhuanyeimg5"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/evaluate_gre" />

                <TextView
                    android:id="@+id/zhuanyemarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="4.5"
                    android:textColor="#fd0002"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#ebebeb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="沟通评分:"
                    android:textColor="@color/subtextcolor"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/goutongimg1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/evaluate_gre" />

                <ImageView
                    android:id="@+id/goutongimg2"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/evaluate_gre" />

                <ImageView
                    android:id="@+id/goutongimg3"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/evaluate_gre" />

                <ImageView
                    android:id="@+id/goutongimg4"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/evaluate_gre" />

                <ImageView
                    android:id="@+id/goutongimg5"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/evaluate_gre" />
                <TextView
                    android:id="@+id/goutongmarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="4.5"
                    android:textColor="#fd0002"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/reviewslist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:layout_below="@id/choice"
        android:divider="#ebebeb"
        android:dividerHeight="1dp" >
    </ListView>

    <TextView
        android:id="@+id/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/choice"
        android:text="暂时没有评价"
        android:textColor="@color/black"
        android:visibility="gone"
        android:textSize="16sp" />
    
    <LinearLayout
        android:id="@+id/review"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_t"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我来评价"
            android:textColor="@color/text_click"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>