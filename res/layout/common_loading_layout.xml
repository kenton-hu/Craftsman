<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rToast"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical|center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rzj"
        android:layout_width="@dimen/p480"
        android:layout_height="@dimen/p800"
        android:gravity="center_vertical|center" >

        <RelativeLayout
            android:layout_width="@dimen/p300"
            android:layout_height="@dimen/p80"
            android:layout_centerHorizontal="true"
             >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/group_del_bg" >

                <ProgressBar
                    android:id="@+id/toastImg"
                    android:layout_width="@dimen/p22"
                    android:layout_height="@dimen/p22"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/p50"
                    android:indeterminateDrawable="@drawable/group_del_progress" 
                    android:indeterminate="true"/>

                <TextView
                    android:id="@+id/toastName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/p10"
                    android:layout_toRightOf="@id/toastImg"
                    android:text="正在移除"
                    android:textColor="@color/white"
                    android:textSize="@dimen/edit_size" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>